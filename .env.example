# Database Connection
DATABASE_URL=postgres://username:password@localhost:5432/assistdeck

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Google OAuth (for Authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Google Calendar API (for Calendar Integration)
GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_client_secret
GOOGLE_CALENDAR_REDIRECT_URL=http://localhost:8080/calendar/google/callback

# Google Gemini API (for AI chat)
GEMINI_API_KEY=your_gemini_api_key

# Server Configuration
PORT=8080

